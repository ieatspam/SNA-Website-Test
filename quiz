  <style>
    .quiz-container {
      max-width: 700px;
      margin: 3em auto;
      padding: 2em;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    .question {
      margin-bottom: 1.5em;
    }
    .question h3 {
      font-size: 1.2em;
    }
    .question label {
      display: block;
      margin: 0.3em 0;
    }
    #result {
      margin-top: 2em;
      font-weight: bold;
    }
  </style>
